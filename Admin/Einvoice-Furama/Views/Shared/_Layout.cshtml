<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @Einvoice_Customer.Language.Resource.InvoiceReseach</title>
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.min.css" />
   
    @*@Styles.Render("~/Content/css")*@
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap-datepicker.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/jquery.fancybox.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/style3.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/site.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/responsive.css" />
    @*<script type="text/javascript" src="~/Content/js/less.js"></script>*@
    
    @*<link rel="stylesheet" type="text/css" href="~/Content/hoadon_style.css" />*@
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.cookie.js" type="text/javascript"></script>
