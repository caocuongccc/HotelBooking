@model Einvoice_Customer.Models.CustomerViewModel

@{
    ViewBag.Title = Einvoice_Customer.Language.Resource.InforCus;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="custom">
    <h1 >
            @*<span class="glyphicon glyphicon-user">*@</span> @ViewBag.Title.ToUpper()
    </h1>
    <div class="row">
    @*<div class="img-custom"><img src="../img/thong-tin-lien-lac.png" alt="Alternate Text" /></div>*@
        <div class="col-md-12">
            <div class="form-group">
                <label class="col-md-2">@Html.DisplayNameFor(model => model.CusCode)</label>
                <div class="col-md-10">@Html.DisplayFor(model => model.CusCode)</div>
                <div class="clearfix"></div>
            </div>
            <div class="form-group">
                <label class="col-md-2">@Html.DisplayNameFor(model => model.Name)</label>
                <div class="col-md-10">@Html.DisplayFor(model => model.Name)</div>
                <div class="clearfix"></div>
            </div>
            <div class="form-group">
                <label class="col-md-2">@Html.DisplayNameFor(model => model.Address)</label>
                <div class="col-md-10">@Html.DisplayFor(model => model.Address)</div>
                <div class="clearfix"></div>
            </div>
            <div class="form-group">
                <label class="col-md-2">@Html.DisplayNameFor(model => model.Phone)</label>
                <div class="col-md-10">@Html.DisplayFor(model => model.Phone)</div>
                <div class="clearfix"></div>
            </div>
            <div class="form-group">
                <label class="col-md-2">@Html.DisplayNameFor(model => model.Taxcode)</label>
