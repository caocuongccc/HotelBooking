                <div class="clearfix"></div>
            </div>
            <div class="form-group">
                <label class="col-md-2">@Html.DisplayNameFor(model => model.Email)</label>
                <div class="col-md-10">@Html.DisplayFor(model => model.Email)</div>
                <div class="clearfix"></div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-sm-12 text-center">
            <a href="~/EInvoiceCustomer/Index" class="btn bill-list visible-xs-block visible-sm-inline-block visible-md-inline-block visible-lg-inline-block" style="margin-top:5px;">@Einvoice_Customer.Language.Resource.Back</a>
            <a href="~/Account/Edit" class="btn bill-list visible-xs-block visible-sm-inline-block visible-md-inline-block visible-lg-inline-block" style="margin-top: 5px;">@Einvoice_Customer.Language.Resource.EditProfile</a>
        </div>
        <div class="clearfix"></div>
    </div>
    
</div>
