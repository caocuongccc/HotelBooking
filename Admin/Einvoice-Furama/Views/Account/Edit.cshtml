@model Einvoice_Customer.Models.CustomerModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Edit", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
<div class="custom">
    <h1 >
            @*<span class="glyphicon glyphicon-user"></span>*@ @Einvoice_Customer.Language.Resource.InforCus
    </h1>
    <div class="row">
        <div class="col-md-12">
            @*<div class="img-custom"><img src="../img/thong-tin-lien-lac.png" alt="Alternate Text" /></div>*@
            <div class="form-group">
                <div class="row">
                    <label class="col-md-2">@Einvoice_Customer.Language.Resource.CusCode</label>
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.Code)
                        @Html.HiddenFor(model => model.Code)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-md-2">@Einvoice_Customer.Language.Resource.CusName <span style="color:red">(*)</span></label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Name, "", new { style = "color:red" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-md-2">@Einvoice_Customer.Language.Resource.Addr <span style="color:red">(*)</span></label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Address, "", new { style = "color:red" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-md-2">@Einvoice_Customer.Language.Resource.Phone</label>
                    <div class="col-md-10">@Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })</div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-md-2">@Einvoice_Customer.Language.Resource.MST</label>
                    <div class="col-md-10">@Html.TextBoxFor(model => model.TaxCode, new { @class = "form-control" })</div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-md-2">Email</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-12 text-center">
            <a href="/Account/Profile" class="btn bill-list visible-xs-block visible-sm-inline-block visible-md-inline-block visible-lg-inline-block" style="margin-top:5px;">@Einvoice_Customer.Language.Resource.CancelProcess</a>
            <button type="submit" class="btn bill-list visible-xs-block visible-sm-inline-block visible-md-inline-block visible-lg-inline-block" style="margin-top:5px;">@Einvoice_Customer.Language.Resource.SaveChanged</button>
        </div>
        <div class="clearfix"></div>
    </div>
    
</div>
}
